@{
    ViewData["Title"] = "PasswordChange";
}
@model PasswordChangeViewModel
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
<div class="row">
    <div class="col-md-8 offset-md-2">
        @if (ViewData["SuccessMessage"] != null)
        {
            <div class="alert alert-info" role="alert">
                @ViewBag.SuccessMessage
            </div>
        }

        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
        </div>

        <form method="post">
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="PasswordOld">
                    <span class="text-danger" asp-validation-for="PasswordOld"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Yeni Password</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="PasswordNew">
                    <span class="text-danger" asp-validation-for="PasswordNew"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Confirm Yeni Password</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="PasswordNewConfirm">
                    <span class="text-danger" asp-validation-for="PasswordNewConfirm"></span>
                </div>
            </div>
            
            <div class="row mb-3">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Şifre Değiştir</button>
                </div>
            </div>
        </form>
    </div>
</div>

