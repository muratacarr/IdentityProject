
@{
    ViewData["Title"] = "ResetPassword";
}
@model ForgetPasswordViewModel

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}


<div class="row">
    <div class="col-md-4 offset-md-4">
        @if (ViewData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @ViewBag.SuccessMessage
            </div>
        }
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
        </div>
        <div class="alert alert-info">Şifre yenileme Linki, eposta adresinize gönderilecektir.</div>
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input asp-for="Email" class="form-control" aria-describedby="emailHelp">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <button type="submit" class="btn btn-primary">Gönder</button>
        </form>
    </div>
</div>


