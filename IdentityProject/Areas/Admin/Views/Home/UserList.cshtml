@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<AdminModel.UserViewModel>

<table class="table table-hoverA">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">UserName</th>
            <th scope="col">Email</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td><a asp-area="Admin" asp-controller="Roles" asp-action="AssignRoleToUser" asp-route-id="@item.Id" class="btn btn-warning">Rol Ata</a></td>
            </tr>
        }
    </tbody>
</table>

