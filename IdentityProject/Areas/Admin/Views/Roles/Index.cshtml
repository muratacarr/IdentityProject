
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<AdminModel.RoleViewModel>
@if (ViewData["SuccessMessage"] != null)
{
    <div class="alert alert-info" role="alert">
        @ViewData["SuccessMessage"]
    </div>
}

<div class="row">
    <div class="col-md-6 offset-md-2">
        <h1>Roller</h1>
    </div>
    <div class="col-md-2">
        <a asp-area="Admin" asp-controller="Roles" asp-action="RoleCreate" class="btn btn-primary">Rol Ekle</a>

    </div>
</div>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table table-hoverA">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">UserName</th>
                    <th scope="col"></th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Name</td>
                        <td>
                            <a asp-area="Admin" asp-controller="Roles" asp-action="RoleUpdate" asp-route-id="@item.Id" class="btn btn-warning">Güncelle</a>
                            <a asp-area="Admin" asp-controller="Roles" asp-action="RoleDelete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>