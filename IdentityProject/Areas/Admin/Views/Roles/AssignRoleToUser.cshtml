
@{
    ViewData["Title"] = "AssignRoleToUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<AdminModel.AssignRoleToUserViewModel>
<h1>AssignRoleToUser</h1>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form method="post" asp-area="Admin" asp-controller="Roles" asp-action="AssignRoleToUser" asp-route-userId="@ViewBag.userId">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="mb-3 form-check">
                    <label class="form-label">@Model[i].Name</label>
                    <input asp-for="@Model[i].Exist" class="form-check-input" type="checkbox">
                    <input type="hidden" asp-for="@Model[i].Name" />
                    <input type="hidden" asp-for="@Model[i].Id" />
                </div>
            }
            <button type="submit" class="btn btn-primary">Oluştur</button>
        </form>

        <div class="mt-3">
            <a asp-area="Admin" asp-controller="Home" asp-action="UserList">Listeye geri dön</a>
        </div>
    </div>
</div>